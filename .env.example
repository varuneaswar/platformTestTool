# Database Configuration
# Copy this file to .env and update with your actual credentials
# Multiple database configurations are supported

# PostgreSQL Database 1
DB_POSTGRES_PRIMARY_TYPE=postgresql
DB_POSTGRES_PRIMARY_HOST=localhost
DB_POSTGRES_PRIMARY_PORT=5432
DB_POSTGRES_PRIMARY_NAME=postgres
DB_POSTGRES_PRIMARY_USER=postgres
DB_POSTGRES_PRIMARY_PASSWORD=your_password_here

# PostgreSQL Database 2 (Secondary/Test)
DB_POSTGRES_SECONDARY_TYPE=postgresql
DB_POSTGRES_SECONDARY_HOST=localhost
DB_POSTGRES_SECONDARY_PORT=5433
DB_POSTGRES_SECONDARY_NAME=testdb
DB_POSTGRES_SECONDARY_USER=testuser
DB_POSTGRES_SECONDARY_PASSWORD=your_password_here

# MySQL Database
DB_MYSQL_PRIMARY_TYPE=mysql
DB_MYSQL_PRIMARY_HOST=localhost
DB_MYSQL_PRIMARY_PORT=3306
DB_MYSQL_PRIMARY_NAME=mydb
DB_MYSQL_PRIMARY_USER=root
DB_MYSQL_PRIMARY_PASSWORD=your_password_here

# MSSQL Database
DB_MSSQL_PRIMARY_TYPE=mssql
DB_MSSQL_PRIMARY_HOST=localhost
DB_MSSQL_PRIMARY_PORT=1433
DB_MSSQL_PRIMARY_NAME=master
DB_MSSQL_PRIMARY_USER=sa
DB_MSSQL_PRIMARY_PASSWORD=your_password_here

# Oracle Database
DB_ORACLE_PRIMARY_TYPE=oracle
DB_ORACLE_PRIMARY_HOST=localhost
DB_ORACLE_PRIMARY_PORT=1521
DB_ORACLE_PRIMARY_NAME=ORCLPDB1
DB_ORACLE_PRIMARY_SERVICE_NAME=ORCLPDB1
DB_ORACLE_PRIMARY_USER=system
DB_ORACLE_PRIMARY_PASSWORD=your_password_here

# MongoDB Database
DB_MONGODB_PRIMARY_TYPE=mongodb
DB_MONGODB_PRIMARY_HOST=localhost
DB_MONGODB_PRIMARY_PORT=27017
DB_MONGODB_PRIMARY_NAME=testdb
DB_MONGODB_PRIMARY_USER=admin
DB_MONGODB_PRIMARY_PASSWORD=your_password_here

# Redis Database
DB_REDIS_PRIMARY_TYPE=redis
DB_REDIS_PRIMARY_HOST=localhost
DB_REDIS_PRIMARY_PORT=6379
DB_REDIS_PRIMARY_NAME=0
DB_REDIS_PRIMARY_USER=
DB_REDIS_PRIMARY_PASSWORD=your_password_here

