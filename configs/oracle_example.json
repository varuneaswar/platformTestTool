{
    "users": [
        {
            "user_id": "oracle_user",
            "database": {
                "db_type": "oracle",
                "host": "localhost",
                "port": 1521,
                "database": "ORCLPDB1",
                "service_name": "ORCLPDB1",
                "username": "system",
                "password": "oracle"
            },
            "test_config": {
                "concurrent_connections": 10,
                "queries_per_connection": 50,
                "execution_time": 60,
                "ramp_up_time": 10,
                "metrics_interval": 30,
                "single_run_mode": "per_thread",
                "retry": {
                    "enabled": true,
                    "retries": 3,
                    "skip_nonrelational": true
                }
            },
            "thread_ratios": {
                "read": 0.7,
                "write": 0.3,
                "read_complexity": {
                    "simple": 0.6,
                    "medium": 0.3,
                    "complex": 0.1
                },
                "write_operations": {
                    "insert": 0.4,
                    "update": 0.4,
                    "delete": 0.2
                },
                "write_complexity": {
                    "simple": 0.7,
                    "medium": 0.2,
                    "complex": 0.1
                }
            },
            "queue_settings": {
                "replenish_interval": 5,
                "max_queue_size": 1000
            },
            "query_folder": "queries/oracle"
        }
    ],
    "logging": {
        "level": "INFO",
        "file": "logs/oracle_soak_test.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
}
